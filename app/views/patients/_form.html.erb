<%= form_with model: patient do |form| %>
  <% if patient.errors.any? %>
    <div class="bg-red-100 p-4 rounded-lg mb-4">
      <h2 class="text-red-700 font-semibold mb-2"><%= pluralize(patient.errors.count, "error") %> ocorreram durante o cadastro:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <nav class="flex justify-between p-4">
    <%= link_to "Home Dashboard", root_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
    <%= link_to "Pacientes", patients_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  </nav>
  <div class="bg-blue-400 p-4 rounded-lg mb-4">
    <h2 class="text-white text-lg font-semibold mb-2">
      <% if @patient.new_record? %>
        Formulário de Cadastro de Paciente
      <% else %>
        Formulário de Edição de Paciente
      <% end %>
    </h2>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= form.label :name, class: "text-white font-semibold" %>
        <%= form.text_field :name, class: "w-full bg-white rounded p-2" %>
      </div>

      <div>
        <%= form.label :email, class: "text-white font-semibold" %>
        <%= form.email_field :email, class: "w-full bg-white rounded p-2" %>
      </div>

      <div>
        <%= form.label "CPF (apenas números)", class: "text-white font-semibold" %>
        <%= form.text_field :cpf, class: "w-full bg-white rounded p-2" %>
      </div>

      <!-- Novos campos -->
      <div>
        <%= form.label "Contato", class: "text-white font-semibold" %>
        <%= form.text_field :contato, class: "w-full bg-white rounded p-2" %>
      </div>

      <div>
        <%= form.label "Data de Nascimento", class: "text-white font-semibold" %>
        <%= form.date_field :data_nascimento, class: "w-full bg-white rounded p-2" %>
      </div>

      <div>
        <%= form.label :genero, class: "text-white font-semibold" %>
        <%= form.select :genero, Patient::GENDER_OPTIONS, {}, class: "w-full bg-white rounded p-2" %>
      </div>

      <div>
        <%= form.label :endereco, class: "text-white font-semibold" %>
        <%= form.text_area :endereco, class: "w-full bg-white rounded p-2" %>
      </div>
      <!-- Fim dos novos campos -->
    </div>
  </div>
  <div class="text-center">
    <%= form.submit "Cadastrar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
  </div>
<% end %>
