<nav class="flex justify-between p-4">
  <%= link_to "Home Dashboard", root_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  <%= link_to "Novo Dentista", new_dentist_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  <%= link_to "Lista de Dentistas", dentists_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  <%= link_to 'Voltar', root_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
</nav>

<body>

  <%= form_with model: @dentist, url: search_dentist_path, method: :get do |form| %>
    <div class="bg-blue-400 p-4 rounded-lg mb-4">
      <div class="text-white text-lg font-semibold mb-2" align="center">
        <h1>Buscar Dentista</h1>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="search_name" class="text-white font-semibold">Nome:</label>
          <%= form.text_field :nome, id: "dentist_nome", class: "w-full bg-white rounded p-2" %>
        </div>

        <div>
          <label for="search_cro" class="text-white font-semibold">CRO:</label>
          <%= form.text_field :cro, id: "dentist_cro", class: "w-full bg-white rounded p-2" %>
        </div>
      </div>
      <div class="mt-4">
        <%= form.submit "Buscar",
                        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer"
        %>
      </div>
    </div>

  <% end %>

  <% if @dentists.present? %>
    <div class="bg-blue-400 p-4 rounded-lg mb-4">
      <div class="text-white font-semibold">
        <div class="text-white text-lg font-semibold mb-2" align="center">
          <h2>Resultados da busca:</h2>
        </div>
        <ul>
          <% @dentists.each do |dentist| %>
            <li>
              <p><strong>Nome:</strong> <%= dentist.nome %></p>
              <p><strong>Email:</strong> <%= dentist.email %></p>
              <p><strong>Contato:</strong> <%= dentist.contato %></p>
              <p><strong>CRO:</strong> <%= dentist.cro %></p>
              <p><strong>Especialização:</strong> <%= dentist.especializacao %></p>
              <p><strong>Horario de chegada:</strong> <%= dentist.horario_chegada %></p>
              <p><strong>Horario de saida:</strong> <%= dentist.horario_saida %></p>
              <hr>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% else %>
    <p>Nenhum dentista encontrado.</p>
  <% end %>

</body>
