<nav class="flex justify-between p-4">
  <%= link_to "Home Dashboard", root_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  <%= link_to 'Voltar', dentists_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
</nav>

<div class="bg-blue-400 p-4 rounded-lg mb-4">
  <div class="text-white text-lg font-semibold mb-2" align="center">
    <h1>Detalhes do Dentista</h1>
  </div>

  <div class="text-white font-semibold">
    <p><strong>Nome:</strong> <%= @dentist.nome %></p>
    <p><strong>Especialização:</strong> <%= @dentist.especializacao %></p>
    <p><strong>CRO:</strong> <%= @dentist.cro %></p>
    <p><strong>Dias de Atendimento:</strong>
      <% dias_atendimento = [] %>
      <% dias_atendimento << "Segunda-feira" if @dentist.disponivel_segunda == 1 %>
      <% dias_atendimento << "Terça-feira" if @dentist.disponivel_terca == 1 %>
      <% dias_atendimento << "Quarta-feira" if @dentist.disponivel_quarta == 1 %>
      <% dias_atendimento << "Quinta-feira" if @dentist.disponivel_quinta == 1 %>
      <% dias_atendimento << "Sexta-feira" if @dentist.disponivel_sexta == 1 %>
      <% dias_atendimento << "Sábado" if @dentist.disponivel_sabado == 1 %>
      <% dias_atendimento << "Domingo" if @dentist.disponivel_domingo == 1 %>
      <%= dias_atendimento.join(', ') %>
    </p>
  </div>
</div>

<div align="center">
  <%= link_to 'Editar',
              edit_dentist_path(@dentist),
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer"
  %>
  <%= link_to "Excluir Dentista",
              dentist_path(@dentist),
              data: { turbo_method: :delete },
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer"
  %>
</div>
