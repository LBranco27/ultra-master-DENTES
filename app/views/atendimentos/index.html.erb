<div align="center">
  <h1>Listagem dos Atendimentos</h1>
</div>
<nav class="flex justify-between p-4">
  <%= link_to "Home Dashboard", root_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  <%= link_to "Novo Atendimento", new_atendimento_path, class: "text-blue-900 hover:text-blue-700 mx-8" %>
</nav>

<div class="bg-blue-400 p-4 rounded-lg mb-4">
  <table class="border-collapse border-2 border-white mx-auto">
    <thead>
    <tr>
      <th class="border border-white p-2">Dentista</th>
      <th class="border border-white p-2">Paciente</th>
      <th class="border border-white p-2">Data e Hora</th>
      <th class="border border-white p-2">Descrição</th>
      <th class="border border-white p-2" colspan="3">Ações</th>
    </tr>
    </thead>
    <tbody>
    <% @atendimentos.each do |atendimento| %>
      <tr>
        <td class="border border-white p-2">
          <p class="text-white font-semibold"><%= atendimento.dentist.nome %></p>
        </td>
        <td class="border border-white p-2">
          <p class="text-white font-semibold"><%= atendimento.patient.name %></p>
        </td>
        <td class="border border-white p-2">
          <p class="text-white font-semibold"><%= atendimento.data_hora.strftime('%d/%m/%Y - %H:%M') %></p>
        </td>
        <td class="border border-white p-2">
          <p class="text-white font-semibold"><%= atendimento.observacao %></p>
        </td>
        <td class="border border-white p-2"><%= link_to 'Mostrar', atendimento, class: "text-white font-semibold hover:underline" %></td>
        <td class="border border-white p-2"><%= link_to 'Editar', edit_atendimento_path(atendimento), class: "edit-link text-white font-semibold hover:underline" %></td>
        <td class="border border-white p-2"><%= link_to "Excluir", atendimento_path(atendimento), class: 'delete-link', data: { turbo_method: :delete }, class: "text-white font-semibold hover:underline" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

