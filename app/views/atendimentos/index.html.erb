<p style="color: green"><%= notice %></p>

<h1>Atendimentos</h1>
<table>
  <thead>
  <tr>
    <th>Dentista</th>
    <th>Paciente</th>
    <th>Data e Hora</th>
    <th>Descrição</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @atendimentos.each do |atendimento| %>
  <tr>
      <td><%= atendimento.dentist.nome %></td>
      <td><%= atendimento.patient.name %></td>
      <td><%= atendimento.data_hora %></td>
      <td><%= atendimento.observacao %></td>
      <td><%= link_to 'Mostrar', atendimento %></td>
      <td><%= link_to 'Editar', edit_atendimento_path(atendimento), class: 'edit-link' %></td>
      <td><%= link_to "Desmarcar", atendimento_path(atendimento), class: 'delete-link', data: {
        turbo_method: :delete
      } %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to "Novo atendimento", new_atendimento_path %>
<br>
<%= link_to "Voltar para o Inicio", root_path %>
