<div class="bg-blue-400 p-4 rounded-lg mb-4">
  <h2 class="text-white text-lg font-semibold mb-2">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col space-y-2">
      <div class="field">
        <%= f.label :email, class: "text-white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded p-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "Senha", class: "text-white" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-white rounded p-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirme a Senha", class: "text-white" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-white rounded p-2" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
