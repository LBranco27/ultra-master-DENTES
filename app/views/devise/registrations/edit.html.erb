<nav class="flex justify-between p-4">
  <%= link_to "Home Dashboard", root_path, class: "text-blue-900 hover:text-blue-700 mx-2" %>
  <%= link_to "Cancelar minha CONTA", registration_path(resource_name),
              method: :delete,
              data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
              class: "text-blue-900 hover:text-blue-700 mx-2" %>
</nav>
<div class="bg-blue-400 p-4 rounded-lg mb-4">
  <h2 class="text-white text-lg font-semibold mb-2">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col space-y-2">
      <div class="field">
        <%= f.label :email, class: "text-white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded p-2" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-white">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "Senha", class: "text-white" %> <i>(deixe em branco caso não queira alterar)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-white rounded p-2" %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-white"><%= @minimum_password_length %> caracteres no mínimo </em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirme a Senha", class: "text-white" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-white rounded p-2" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "Senha Atual", class: "text-white" %> <i>(precisamos dela para confirmar suas alterações)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full bg-white rounded p-2" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
      </div>
    </div>
  <% end %>

</div>
